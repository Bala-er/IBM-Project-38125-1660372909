const int echoPin=2, triggerPin=3, red=4, green=5, blue=6;
const int buzz = 7;
int pulseValue;
float distance;

void setup( ) {
pinMode(echoPin, INPUT);
pinMode(triggerPin, OUTPUT);
pinMode(red, OUTPUT);
pinMode(green, OUTPUT);
pinMode(blue, OUTPUT);
pinMode(buzz, OUTPUT);
Serial.begin(9600);
}

